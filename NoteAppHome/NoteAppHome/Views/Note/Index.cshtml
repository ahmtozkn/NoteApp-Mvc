@model List<NoteVm>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-dark tabletable-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>NotebookName</th>
            <th>Title</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Content</td>
                <td>@item.NoteBookName</td>
                <td>@item.Title</td>
                <td><a href="/Note/Update/@item.Id" class="btn btn-dark">Update</a></td>
                <td> <a href="/Note/Delete/@item.Id" class="btn btn-danger">Delete</a> </td>
                
            </tr>
        }
    </tbody>
</table>
<a href="/note/create" class="btn btn-primary" >New Note </a>